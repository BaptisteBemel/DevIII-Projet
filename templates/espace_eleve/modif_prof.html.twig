{% extends 'base.html.twig' %}

{% block body %}
    <body style="background-color: rgba(0,0,0,0.15)">
        <div class="grix xs7 container" style="margin-top: 3%">
            <div class="col-xs6"><h1>Modification du profil de {{app.user.prenom}} {{app.user.nom}} </h1></div>
            
            {{form_start(form)}}
            <div class="form-group">
                {{form_row(form.nom)}}
            </div>
            <div class="form-group">
                {{form_row(form.prenom)}}
            </div>
            <div class="form-group">
                {{form_row(form.adresse, {'label': '', 'attr':{'class':'form-control', 'min':'3'}})}}
            </div>
            <div class="form-group">
                {{form_row(form.numero_tel, {'label': '', 'attr':{'class':'form-control'}})}}
            </div>
            <div class="form-group">
                {{form_row(form.situationscolaire)}}
            </div>
            <div class="form-group" style="color: black">
                {{form_row(form.valider)}} <a class="btn btn-info" href="{{path('profil_eleve')}}" style="float:right">Retour</a>
            </div>
            
        </div>
    </body>
	

{% endblock %}