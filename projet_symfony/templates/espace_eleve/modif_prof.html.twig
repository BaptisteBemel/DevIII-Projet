{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="grix xs7 container">
            <div class="col-xs6"><h1>Modification du profil de {{app.user.prenom}} {{app.user.nom}} </h1></div>
            
            {{form_start(form)}}
            <div class="form-group">
                {{form_row(form.nom)}}
            </div>
            <div class="form-group">
                {{form_row(form.prenom)}}
            </div>
            <div class="form-group">
                {{form_row(form.adresse)}}
            </div>
            <div class="form-group">
                {{form_row(form.numero_tel)}}
            </div>
            <div class="form-group">
                {{form_row(form.situationscolaire)}}
            </div>
            <div class="form-group">
                {{form_row(form.valider)}}
            </div>
        </div>
    </main>
	

{% endblock %}